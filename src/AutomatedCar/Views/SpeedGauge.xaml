<UserControl x:Class="AutomatedCar.Views.SpeedGauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomatedCar.Views"
             xmlns:model="clr-namespace:AutomatedCar.Models"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="105" d:DesignWidth="126" 
             d:DataContext="{d:DesignInstance local:SpeedGauge}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <lvc:AngularGauge Grid.Row="1" Value="{Binding Value}" FromValue="0" ToValue="100"
                          TicksStep="5" Wedge="300" LabelsStep="10000" NeedleFill="White"
                          TicksForeground="White" Foreground="White" 
                          FontWeight="Regular" FontSize="16"
                          SectionsInnerRadius=".5" HorizontalAlignment="Center" Width="106" Margin="0,0,0,8" Height="97" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
